---
import { ChevronRight } from "lucide-react";

import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import { RainbowButton } from "./magic-ui/rainbow-button";
---

<section id="hero">
  <div class="relative h-full overflow-hidden py-5 md:py-14">
    <div class="z-10 flex flex-col">
      <div class="mt-10 grid grid-cols-1 md:mt-20">
        <div
          class="flex flex-col items-start gap-6 px-7 pb-8 text-center md:items-center md:px-10"
        >
          <div class="relative flex flex-col gap-4 md:items-center lg:flex-row">
            <h1
              class={cn(
                "text-black dark:text-white",
                "relative mx-0 max-w-[43.5rem]  pt-5  md:mx-auto md:px-4 md:py-2",
                "text-balance text-left font-semibold tracking-tighter md:text-center",
                "text-5xl sm:text-7xl md:text-7xl lg:text-7xl"
              )}
            >
              Component Library
            </h1>
          </div>

          <p
            class="max-w-xl text-balance text-left text-base tracking-tight text-black dark:font-medium dark:text-white md:text-center md:text-lg"
          >
            1+ free and open-source animated components built with{" "}
            <b>React</b>, <b>Vue</b>, <b>Typescript</b>, <b>Tailwind CSS</b>,
            and{" "}
            <b>Framer Motion</b>
          </p>

          <div
            class="mx-0 flex w-full max-w-full flex-col gap-4 py-1 sm:max-w-lg sm:flex-row md:mx-auto"
          >
            <div class="flex justify-center w-full flex-col sm:flex-row">
              <a href="/components/button">
                <RainbowButton>
                  Browse Components
                  <ChevronRight
                    className="ml-1 size-4 shrink-0 transition-all duration-300 ease-out group-hover:translate-x-1"
                  />
                </RainbowButton>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
